                            +link()(href="#").--header-link RU
                        +_list__li
                            +link()(href="#").--header-link RU
                        +_list__li
                            +link()(href="#")
                                img(src="http://pishevka.shablonkin.shn-host.ru/icons/phone.png")
                        +_list__li
                            +link()(href="#")
                                img(src="http://pishevka.shablonkin.shn-host.ru/icons/search.png")
                        +_list__li
                            +link()(href="#")
                                img(src="http://pishevka.shablonkin.shn-host.ru/icons/hamburger.png")